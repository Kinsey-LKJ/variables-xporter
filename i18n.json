{
  "version": 1.3,
  "locale": {
    "source": "en",
    "targets": [
      "fr",
      "zh"
    ]
  },
  "buckets": {
    "json": {
      "include": [
        "docs/app/_dictionaries/[locale].json",
        "figma-plugin/src/app/[locale].json"
      ]
    },
    "markdown": {
      "include": [
        "docs/content/[locale]/docs/*/*.mdx",
        "docs/content/[locale]/docs/*/*/*.mdx"
      ]
    }
  },
  "$schema": "https://lingo.dev/schema/i18n.json"
}